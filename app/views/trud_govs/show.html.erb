<%- model_class = TrudGov -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:trud_code) %>:</strong></dt>
  <dd><%= @trud_gov.trud_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:koatuu_code) %>:</strong></dt>
  <dd><%= @trud_gov.koatuu_code %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              trud_govs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_trud_gov_path(@trud_gov), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              trud_gov_path(@trud_gov),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
