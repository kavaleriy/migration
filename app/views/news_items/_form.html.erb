<%= form_for @news_item, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    Дата
    <div class="controls">
      <%= f.text_field :issued, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    Текст
    <div class="controls">
      <%= f.text_area :content, :class => 'form-control' %>
    </div>
  </div>
  <hr/>
  <div class="form-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    Сторінка
    <div class="controls">
      <%= f.text_area :page, :class => 'form-control' %>
    </div>
  </div>

  <hr/>

  <div class="form-group">
    Пріорітет
    <div class="controls">
      <%= f.text_field :boost, :class => 'form-control' %>
    </div>
  </div>

  <%= f.submit 'Зберегти новину', :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            news_items_path, :class => 'btn btn-default' %>
<% end %>
