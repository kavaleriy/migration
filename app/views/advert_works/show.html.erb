<%- model_class = AdvertWork -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:advert_id) %>:</strong></dt>
  <dd><%= @advert_work.advert_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rubric) %>:</strong></dt>
  <dd><%= @advert_work.rubric %></dd>
  <dt><strong><%= model_class.human_attribute_name(:places) %>:</strong></dt>
  <dd><%= @advert_work.places %></dd>
  <dt><strong><%= model_class.human_attribute_name(:salary) %>:</strong></dt>
  <dd><%= @advert_work.salary %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              advert_works_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_advert_work_path(@advert_work), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              advert_work_path(@advert_work),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
