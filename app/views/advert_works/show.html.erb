<%- model_class = AdvertWork -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t('adverts.index.koatuu_code') %>:</strong></dt>
  <dd><%= get_koatuu_name(@advert_work.advert.koatuu_code) %></dd>
  <dt><strong><%= t('advert_works.form.profession') %>:</strong></dt>
  <dd><%= @advert_work.profession.name %></dd>
  <dt><strong><%= t('advert_works.form.places') %>:</strong></dt>
  <dd><%= @advert_work.places %></dd>
  <dt><strong><%= t('advert_works.form.salary') %>:</strong></dt>
  <dd><%= @advert_work.salary %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              adverts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_advert_work_path(@advert_work), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              advert_work_path(@advert_work),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
