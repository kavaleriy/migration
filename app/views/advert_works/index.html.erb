<%- model_class = AdvertWork -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:advert_id) %></th>
      <th><%= model_class.human_attribute_name(:rubric) %></th>
      <th><%= model_class.human_attribute_name(:places) %></th>
      <th><%= model_class.human_attribute_name(:salary) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @advert_works.each do |advert_work| %>
      <tr>
        <td><%= link_to advert_work.id, advert_work_path(advert_work) %></td>
        <td><%= advert_work.advert_id %></td>
        <td><%= advert_work.rubric %></td>
        <td><%= advert_work.places %></td>
        <td><%= advert_work.salary %></td>
        <td><%=l advert_work.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_advert_work_path(advert_work), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      advert_work_path(advert_work),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_advert_work_path,
            :class => 'btn btn-primary' %>
