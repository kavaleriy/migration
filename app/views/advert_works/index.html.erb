<% content_for :title, t(".title") %>
<%- model_class = AdvertWork -%>
<div class="page-header">
  <h1><%=t '.title' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('adverts.index.koatuu_code') %></th>
      <th><%= t('advert_works.form.profession') %></th>
      <th><%= t('advert_works.form.places') %></th>
      <th><%= t('advert_works.form.salary') %></th>
      <th><%= t('adverts.index.created') %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @advert_works.each do |advert_work| %>
      <tr>
        <td><%= link_to get_koatuu_name(advert_work.advert.koatuu_code), advert_work_path(advert_work) %></td>
        <td><%= advert_work.profession.name %></td>
        <td><%= advert_work.places %></td>
        <td><%= advert_work.salary %></td>
        <td><%=l advert_work.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_advert_work_path(advert_work), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      advert_work_path(advert_work),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="flickr_pagination ">
  <%= will_paginate @advert_works, :container => false %>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_advert_work_path,
            :class => 'btn btn-primary' %>
