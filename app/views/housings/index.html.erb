<%- model_class = Housing -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('.area') %></th>
      <th><%= t('.type') %></th>
      <th><%= t('.qtt') %></th>
      <th><%= t('.school') %>/<%= t('.kgarten') %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @housings.each do |housing| %>
      <tr>
        <td><%= housing.area.name %></td>
        <td><%= housing.type.name %></td>
        <td><%= housing.qty_places %> / <%= housing.qty_work %></td>
        <td><%= housing.has_school %> / <%= housing.has_kgarden %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_housing_path(housing), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      housing_path(housing),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_housing_path,
            :class => 'btn btn-primary' %>
