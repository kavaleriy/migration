<h2><%= t('devise.sessions.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div><%= t('devise.passwords.password') %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= t('devise.passwords.remember_me') %></div>
  <% end -%>

  <div class="col-sm-2"><%= f.submit t('devise.sessions.sign_in'), :class => "btn btn-default" %></div>
<% end %>

<%= render "devise/shared/links" %>
