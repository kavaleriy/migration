<div itemscope itemtype="http://schema.org/Organization" class="logo pull-left">
    <a itemprop="url" href="http://migrants.gov.ua">
        <img itemprop="logo" alt="<%=t('layouts.header.title')%>" title="<%=t('layouts.header.title')%>" width="539" height="83" src="http://migrants.gov.ua/assets/logo-1d991a84120300a039498089f98a981b.png" />
    </a>
</div>

<a class="pull-right" target="_blank" href="http://ukc.gov.ua/">
    <div class="hot_phone">
    </div>
</a>

<div class="lang pull-right">
  <% if I18n.locale == I18n.default_locale %>
      <%= image_tag('ukr_active.png') + " Укр " %>
      <%= link_to image_tag('rus_neactive.png') + " Рус ", :locale=>'ru' %>
  <% else %>
      <%= link_to image_tag('ukr_neactive.png') + " Укр ", :locale=>'uk' %>
      <%= image_tag('rus_active.png') + " Рус " %>
  <%end%>

</div>


<div class="clearfix"></div>


<div class="col-sm-9" id="carousel" class="carousel slide" data-ride="carousel" data-interval="3000" data-wrap="false">
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <p class="note"><%= t('layouts.header.note') %></p>
    </div>
    <div class="item">
      <p class="info"><span class='fa fa-info-circle'></span> <%= t('layouts.header.alert').html_safe %></p>
    </div>

  </div>

  <!-- Controls -->
  <a class="right carousel-control" href="#carousel" role="button" data-slide="prev" style="margin-right: 30px;">
    <span class="fa fa-angle-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
    <span class="fa fa-angle-right"></span>
  </a>


</div>

